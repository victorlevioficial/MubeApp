rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // 1. LEITURA:
      // - Autenticado: Pode ler qualquer usuário (para feed/busca).
      // - Não-Autenticado: Pode ler APENAS usuários de teste (isMock == true).
      allow read: if request.auth != null || resource.data.isMock == true;
      
      // 2. ESCRITA (Create/Update):
      // - Autenticado: Pode escrever na própria conta.
      // - Não-Autenticado: Pode criar/editar usuários de teste (isMock == true).
      allow write: if (request.auth != null && request.auth.uid == userId) || 
                   (request.resource.data.isMock == true);

      // 3. DELEÇÃO:
      // - Autenticado: Pode deletar própria conta.
      // - Não-Autenticado: Pode deletar usuários de teste (isMock == true).
      allow delete: if (request.auth != null && request.auth.uid == userId) || 
                    (resource.data.isMock == true);
    }

    // Favorites collection
    match /favorites/{favoriteId} {
      // Allow read/write if the document belongs to the user
      // Assuming document ID format: "userId_targetId" or checks field "userId"
      // But safer to check resource.data.userId or request.resource.data.userId
      
      allow read: if request.auth != null;
      
      // Allow create if user is setting themselves as the owner
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow delete if user owns the favorite
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /deleted_users/{userId} {
       allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Collection for connectivity testing
    match /test_connection/{document} {
      allow read, write: if true;
    }
  }
}
