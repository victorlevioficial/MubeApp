rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Perfil: Leitura p√∫blica (para outros verem a foto), Escrita apenas pelo dono
    match /profile_photos/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
