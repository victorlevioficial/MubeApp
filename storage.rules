rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ========================================
    // REGRAS TEMPORÁRIAS PARA DESENVOLVIMENTO
    // ⚠️ ATENÇÃO: Regras liberadas para testes
    // ⚠️ LEMBRAR: Apertar as regras antes de produção
    // ========================================
    
    // Funções auxiliares
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/(jpeg|png|webp|gif)');
    }
    
    function isValidVideo() {
      return request.resource.contentType.matches('video/(mp4|quicktime|webm)');
    }
    
    function isValidPhotoSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    function isValidVideoSize() {
      return request.resource.size < 50 * 1024 * 1024;
    }
    
    // ========================================
    // REGRAS DE ACESSO (LIBERADAS)
    // ========================================
    
    // Fotos de Perfil - LIBERADO PARA TESTES
    match /profile_photos/{userId} {
      allow read: if true; // Leitura pública
      allow write: if isAuthenticated() 
                   && isValidImage() 
                   && isValidPhotoSize();
    }

    // Fotos da Galeria - LIBERADO PARA TESTES
    match /gallery_photos/{userId}/{allPaths=**} {
      allow read: if true; // Leitura pública
      allow write: if isAuthenticated() 
                   && isValidImage() 
                   && isValidPhotoSize();
    }
    
    // Vídeos da Galeria - LIBERADO PARA TESTES
    match /gallery_videos/{userId}/{allPaths=**} {
      allow read: if true; // Leitura pública
      allow write: if isAuthenticated() 
                   && isValidVideo() 
                   && isValidVideoSize();
    }
    
    // Thumbnails de Vídeos - LIBERADO PARA TESTES
    match /gallery_thumbnails/{userId}/{allPaths=**} {
      allow read: if true; // Leitura pública
      allow write: if isAuthenticated() 
                   && isValidImage() 
                   && isValidPhotoSize();
    }
  }
}
