rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Perfil: Leitura pública (para outros verem a foto), Escrita apenas pelo dono
    match /profile_photos/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Galeria: Leitura pública, Escrita apenas pelo dono
    match /gallery_photos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /gallery_videos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /gallery_thumbnails/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
