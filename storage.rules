rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ========================================
    // REGRAS DE PRODUÇÃO - SEGURAS
    // ========================================
    
    // Funções auxiliares
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/(jpeg|png|webp|gif)');
    }
    
    function isValidVideo() {
      return request.resource.contentType.matches('video/(mp4|quicktime|webm)');
    }
    
    function isValidPhotoSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    function isValidVideoSize() {
      return request.resource.size < 50 * 1024 * 1024; // 50MB
    }
    
    // ========================================
    // FOTOS DE PERFIL
    // ========================================
    
    match /profile_photos/{userId} {
      // Leitura pública - qualquer um pode ver fotos de perfil
      allow read: if true;
      
      // Escrita apenas pelo próprio usuário
      allow create, update: if isAuthenticated() 
                             && isOwner(userId)
                             && isValidImage() 
                             && isValidPhotoSize();
      
      // Deleção apenas pelo próprio usuário
      allow delete: if isAuthenticated() && isOwner(userId);
    }

    // ========================================
    // FOTOS DA GALERIA
    // ========================================
    
    match /gallery_photos/{userId}/{allPaths=**} {
      // Leitura pública
      allow read: if true;
      
      // Escrita apenas pelo dono da galeria
      allow create, update: if isAuthenticated() 
                             && isOwner(userId)
                             && isValidImage() 
                             && isValidPhotoSize();
      
      // Deleção apenas pelo dono
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // ========================================
    // VÍDEOS DA GALERIA
    // ========================================
    
    match /gallery_videos/{userId}/{allPaths=**} {
      // Leitura pública
      allow read: if true;
      
      // Escrita apenas pelo dono
      allow create, update: if isAuthenticated() 
                             && isOwner(userId)
                             && isValidVideo() 
                             && isValidVideoSize();
      
      // Deleção apenas pelo dono
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // ========================================
    // THUMBNAILS DE VÍDEOS
    // ========================================
    
    match /gallery_thumbnails/{userId}/{allPaths=**} {
      // Leitura pública
      allow read: if true;
      
      // Escrita apenas pelo dono (gerado automaticamente pelo app)
      allow create, update: if isAuthenticated() 
                             && isOwner(userId)
                             && isValidImage() 
                             && isValidPhotoSize();
      
      // Deleção apenas pelo dono
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // ========================================
    // FALLBACK - NEGAR TUDO O MAIS
    // ========================================
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
